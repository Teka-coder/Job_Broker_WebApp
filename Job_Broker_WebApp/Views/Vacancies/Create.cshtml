<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="@Url.Action("Create", "Vacancies")"><strong>እንኳን በደህና መጡ!</strong><br /><strong style="color:red">Welcome!!</strong><br /><b style="color:green">Fill vacancy form!</b></a>

        </div>
        <div class="register-box-body">
            <p class="login-box-msg" style="color:blue">Post a new Company</p>
            @using (Html.BeginForm("Create", "Vacancies", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              
                <div class="row form-group has-feedback">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.COMP_ID, "Pick your Company", htmlAttributes: new { @class = "control-label" })
                     </div>
                    <div class="col-md-6">
                        @Html.DropDownList("COMP_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.COMP_ID, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>

                </div>
                <div class="row form-group has-feedback">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.JOB_ID, "Job title", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-6">
                        @Html.DropDownList("JOB_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.JOB_ID, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>

                </div>
              
                <div class="form-group has-feedback">
                    @*@Html.LabelFor(model => model.MIN_QUALF, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MIN_QUALF, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Minimum qualification" } })
                        @Html.ValidationMessageFor(model => model.MIN_QUALF, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>
                </div>
