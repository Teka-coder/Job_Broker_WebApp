                        @Html.ValidationMessageFor(model => model.SALARY, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>
                </div>
             
                <div class="row">
                    <div class="col-xs-4 Radio">
                        @Html.LabelFor(model => model.REQ_SEX)
                    </div>
                    <div class="col-xs-8">
                        Male: @Html.RadioButtonFor(model => model.REQ_SEX, "M")
                        <br />
                        Female: @Html.RadioButtonFor(model => model.REQ_SEX, "F")
                        @Html.ValidationMessageFor(model => model.REQ_SEX, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group has-feedback">
                    @Html.LabelFor(model => model.DESCRPTION, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DESCRPTION, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "Some Descrption" } })
                        @Html.ValidationMessageFor(model => model.DESCRPTION, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>
                </div>*@
                <div class="form-group has-feedback">
                    @Html.LabelFor(model => model.DESCRPTION, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DESCRPTION, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Descrption(less than 40 characters)" } })
                        @Html.ValidationMessageFor(model => model.DESCRPTION, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>
                </div>

               
                <div class="form-group has-feedback col-xs-12">

                    <div class="checkbox icheck col-xs-8">
                        @Html.LabelFor(model => model.STATUS)
                        @Html.CheckBoxFor(model => model.STATUS)
                        @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                        <span class="form-control-feedback"></span>
                    </div>
                </div>




                <div class="row">

                    <div class="col-xs-4">

                        @*<div class="checkbox icheck col-xs-8">
                                @Html.LabelFor(model => model.REMARK)
                                @Html.EditorFor(model => model.REMARK)
                                @Html.ValidationMessageFor(model => model.REMARK, "", new { @class = "text-danger" })
                                <span class="form-control-feedback"></span>
                            </div>*@
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Post</button>
                    </div>
                    <div class="col-xs-4">

                    </div>
                </div>

            }


            <div class="row">
                <div class="col-xs-4">
                    @*<button class="btn btn-default btn-block btn-flat">@Html.ActionLink("My profile", "Index")</button>*@
                </div>
                <div class="col-xs-4">

                </div>
                <div class="col-xs-4">
                    <br />
                    <button class="btn btn-danger btn-block btn-flat">@Html.ActionLink("Back", "EmployerDashBoard", "Home")</button>
                </div>
            </div>




            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }


        </div>
    </div>
    <script src="~/Admin/plugins/jquery/js/jQuery-2.1.4.min.js"></script>
    <script src="~/Admin/bootstrap/js/bootstrap.js"></script>
    <script src="~/Admin/plugins/icheck/js/icheck.js"></script>
    <script src="~/Admin/plugins/jquery-validate/js/jquery.validate.js"></script>
    <script src="~/Scripts/Account/Login.js"></script>

    <script src="~/Scripts/Account/Register.js"></script>
</body>
</html>








